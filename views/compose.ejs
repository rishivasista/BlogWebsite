<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="mb-3">
    <label for="postTitle" class="form-label">
      <h5>Title</h5>
    </label>
    <input type="text" class="form-control" name="postTitle" placeholder="Post Title">
  </div>
  <div class="mb-3">
    <label for="post" class="form-label">
      <h5>Post</h5>
    </label>
    <textarea class="form-control" name="postBody" rows="3"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>
<%- include("partials/footer"); -%>
